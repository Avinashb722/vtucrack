{
    "cleanUrls": true,
    "trailingSlash": false,
    "redirects": [
        {
            "source": "/index.html",
            "destination": "/",
            "permanent": true
        },
        {
            "source": "/index",
            "destination": "/",
            "permanent": true
        },
        {
            "source": "/:path+.html",
            "destination": "/:path+",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/:path",
            "destination": "/:path.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}